# todo: .gitconfig stuff
body file control
{
  namespace => "personal";
}

bundle agent git
{
  methods:
      "${this.bundle}_main"
        ifvarclass => "${personal:personal.users}_${this.bundle}_task";
}

bundle agent git_main
{

  vars:
    "packages" slist =>  {
"git",
"git-email" # dnf fedora package name
    };

  packages:
    linux::
      "${packages}"
        policy => "present";

  files:
}
