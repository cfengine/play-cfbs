body file control
{
  namespace => "personal";
}

bundle agent pictures
{
  methods:
      "${this.bundle}_main"
        ifvarclass => "${personal:personal.users}_${this.bundle}_task";
}

bundle agent pictures_main
{

  vars:
    "packages" slist =>  {
"shotwell", # manage pictures, de-dupe during import!
"sxiv" # a nice small viewer
    };

  packages:
    linux.!termux::
      "${packages}"
        policy => "present";

  files:
}
