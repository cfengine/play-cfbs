body file control
{
  namespace => "personal";
}

bundle agent postmarketos
{
  methods:
      "${this.bundle}_main"
        ifvarclass => "${personal:personal.users}_${this.bundle}_task";
}

bundle agent postmarketos_main
{

  vars:
    "packages" slist =>  {
    };

  packages:
    linux.!termux::
      "${packages}"
        policy => "present";

  files:
}
